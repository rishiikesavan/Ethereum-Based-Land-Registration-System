<% layout('layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">Search Land</h1>
        <div class="col-6 offset-3">
            <form action="#" method="GET" novalidate class="validate-form">
                <div class="mb-3">
                    <label class="form-label" for="state">State</label>
                    <input class="form-control" type="text" id="state" name="land[state]" required>
                    <div class="valid-feedback">
                        Great!!!
                    </div>
                    <div class="invalid-feedback">
                        Please Enter
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="district">District</label>
                    <input class="form-control" type="text" id="district" name="Land[district]" required>
                    <div class="valid-feedback">
                        Great!!!
                    </div>
                    <div class="invalid-feedback">
                        Please Enter
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="village">Village</label>
                    <input class="form-control" type="text" id="village" name="Land[village]" required>
                    <div class="valid-feedback">
                        Great!!!
                    </div>
                    <div class="invalid-feedback">
                        Please Enter
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="survey">Survey Number</label>
                    <input class="form-control" type="text" id="survey" name="Land[survey]" required>
                    <div class="valid-feedback">
                        Great!!!
                    </div>
                    <div class="invalid-feedback">
                        Please Enter
                    </div>
                </div>
                <div class="mb-3">
                    <button class="btn btn-success">Search</button>
                </div>
            </form>
        </div>
    </div>