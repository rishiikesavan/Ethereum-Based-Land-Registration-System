<% layout('layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">Register Land</h1>
        <div class="col-6 offset-3">
            <form action="#" method="GET" novalidate class="validate-form">
                <div class="mb-3">
                    <label class="form-label" for="state">State</label>
                    <input class="form-control" type="text" id="state" name="land[state]" required>
                    <div class="valid-feedback">
                        Great!!!
                    </div>
                    <div class="invalid-feedback">
                        Please Enter
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="district">District</label>
                    <input class="form-control" type="text" id="district" name="Land[district]" required>
                    <div class="valid-feedback">
                        Great!!!
                    </div>
                    <div class="invalid-feedback">
                        Please Enter
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="village">Village</label>
                    <input class="form-control" type="text" id="village" name="Land[village]" required>
                    <div class="valid-feedback">
                        Great!!!
                    </div>
                    <div class="invalid-feedback">
                        Please Enter
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="survey">Survey Number</label>
                    <input class="form-control" type="text" id="survey" name="Land[survey]" required>
                    <div class="valid-feedback">
                        Great!!!
                    </div>
                    <div class="invalid-feedback">
                        Please Enter
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="ownerAddress">Owner Address</label>
                    <input class="form-control" type="text" id="ownerAddress" name="Land[ownerAddress]" required>
                    <div class="valid-feedback">
                        Great!!!
                    </div>
                    <div class="invalid-feedback">
                        Please Enter
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="marketValue">Market Value</label>
                    <div class="input-group">
                        <span class="input-group-text" id="marketValue-label">ETH</span>
                        <input type="text" id="marketValue" class="form-control" placeholder="0.00"
                            aria-label="marketValue" aria-describedby="marketValue-label" name="Land[marketValue]"
                            required>
                        <div class="valid-feedback">
                            Great!!!
                        </div>
                        <div class="invalid-feedback">
                            Please Enter
                        </div>
                    </div>
                </div>
                <div class="mb-3">
                    <button class="btn btn-success">Register</button>
                </div>
            </form>
        </div>
        <hr>
        <h1 class="text-center">Add Village Admin</h1>
        <div class="col-6 offset-3">
            <form action="#" method="GET" novalidate class="validate-form">
                <div class="mb-3">
                    <label class="form-label" for="address">Address</label>
                    <input class="form-control" type="text" id="address" name="land[address]" required>
                    <div class="valid-feedback">
                        Great!!!
                    </div>
                    <div class="invalid-feedback">
                        Please Enter
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="village">Village</label>
                    <input class="form-control" type="text" id="village" name="Land[village]" required>
                    <div class="valid-feedback">
                        Great!!!
                    </div>
                    <div class="invalid-feedback">
                        Please Enter
                    </div>
                </div>
                <div class="mb-3">
                    <button class="btn btn-success">Add Admin</button>
                </div>
            </form>
        </div>
    </div>